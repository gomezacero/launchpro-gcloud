# Database
DATABASE_URL="postgresql://user:password@localhost:5432/launchpro?schema=public"

# Tonic API
TONIC_API_USERNAME=your_tonic_username
TONIC_API_PASSWORD=your_tonic_password
TONIC_API_BASE_URL=https://api.publisher.tonic.com

# Meta Ads API
META_ACCESS_TOKEN=your_meta_access_token
META_AD_ACCOUNT_ID=act_1234567890
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_PIXEL_ID=your_pixel_id
META_API_VERSION=v21.0
META_PAGE_ID=your_facebook_page_id  # Required for creating ad creatives

# TikTok Ads API
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
TIKTOK_ADVERTISER_ID=your_advertiser_id
TIKTOK_APP_ID=your_tiktok_app_id
TIKTOK_APP_SECRET=your_tiktok_app_secret
TIKTOK_PIXEL_ID=your_tiktok_pixel_id

# Anthropic API (for AI content generation)
ANTHROPIC_API_KEY=sk-ant-xxx

# Google Gemini API (for image generation - Nano Banana Pro)
GEMINI_API_KEY=your-gemini-api-key

# Google Cloud Platform (Vertex AI)
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1
GCP_STORAGE_BUCKET=launchpro-media
# GCP_SERVICE_ACCOUNT_KEY should be the path to your service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=./gcp-service-account.json

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Optional: Enable/disable AI features
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_IMAGE_GENERATION=true
ENABLE_VIDEO_GENERATION=true

# Resend (for email notifications)
RESEND_API_KEY=re_xxxxxxxxxxxx
RESEND_FROM_EMAIL=LaunchPro <notifications@launchpro.app>

# DesignFlow Integration (for design task management)
DESIGNFLOW_SUPABASE_URL=https://your-designflow-project.supabase.co
DESIGNFLOW_SUPABASE_ANON_KEY=your_designflow_anon_key
# Public keys for client-side Realtime subscription
NEXT_PUBLIC_DESIGNFLOW_SUPABASE_URL=https://your-designflow-project.supabase.co
NEXT_PUBLIC_DESIGNFLOW_SUPABASE_ANON_KEY=your_designflow_anon_key

# ============================================================================
# GOOGLE CLOUD RUN & CLOUD TASKS (v2.0 - GCP Migration)
# ============================================================================
# These variables are used when deploying to Google Cloud Run

# Cloud Run URL - Set after first deployment
# Format: https://launchpro-v2-xxxxx-uc.a.run.app
CLOUD_RUN_URL=

# Cloud Tasks Configuration
CLOUD_TASKS_ENABLED=false
CLOUD_TASKS_LOCATION=us-central1
CLOUD_TASKS_SERVICE_ACCOUNT=launchpro-v2@your-project.iam.gserviceaccount.com

# Alternative GCP Project ID (for backwards compatibility)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id

# Neural Engine Feature Flag
# When 'true': Uses 5-agent pipeline for creative generation
# When 'false': Uses traditional AI service
ENABLE_NEURAL_ENGINE=false
